<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
	<vType id="motorcycle" accel="2.5" decel="4.0" sigma="0.6" length="2.2" maxSpeed="9.7" color="0.9,0.9,0.1" guiShape="motorcycle"/>
	<vType id="car" accel="2.0" decel="4.0" sigma="0.5" length="4.5" maxSpeed="8.33" color="0.1,0.4,1" guiShape="passenger"/>
	<vType id="truck" accel="1.3" decel="3.0" sigma="0.6" length="8.0" maxSpeed="7.2" color="0.6,0.6,0.6" guiShape="truck"/>
	<vType id="ambulance" accel="2.6" decel="4.5" sigma="0.5" length="5" maxSpeed="13.9" color="1,0,0" guiShape="emergency"/>

	<!-- predefined routes for a 2x3 grid (two-lane, left-hand) -->
	<route id="r_top" edges="J1-J2 J2-J3"/>
	<route id="r_bot" edges="J6-J5 J5-J4"/>
	<route id="r_up"  edges="J4-J5 J5-J2"/>

	<!-- continuous background traffic with mixed vehicle types -->
	<flow id="f_top_lr_cars" type="car" begin="0" end="36000" route="r_top" vehsPerHour="80"/>
	<flow id="f_top_lr_bikes" type="motorcycle" begin="0" end="36000" route="r_top" vehsPerHour="60"/>
	<flow id="f_bot_rl_cars" type="car" begin="0" end="36000" route="r_bot" vehsPerHour="80"/>
	<flow id="f_bot_rl_trucks" type="truck" begin="0" end="36000" route="r_bot" vehsPerHour="30"/>
	<flow id="f_vert_up_cars" type="car" begin="0" end="36000" route="r_up" vehsPerHour="60"/>

	<!-- periodic ambulance towards hospital via middle column -->
	<flow id="f_ambulance" type="ambulance" begin="10" end="36000" route="r_up" period="120"/>
</routes>